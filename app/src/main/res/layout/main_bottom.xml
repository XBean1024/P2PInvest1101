<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bottom_line"
        />
    <RadioGroup
        android:background="@color/title_black"
        android:id="@+id/main_bottom_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_page"
            style="@style/main_bottom_radio_button_style"
            android:drawableTop="@drawable/home_selector"
            android:text="@string/home_page"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bottom_line"
            />

        <RadioButton
            android:id="@+id/means_page"
            style="@style/main_bottom_radio_button_style"
            android:drawableTop="@drawable/means_selector"
            android:text="@string/means"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bottom_line"
            />

        <RadioButton
            android:id="@+id/news_page"
            style="@style/main_bottom_radio_button_style"
            android:drawableTop="@drawable/news_selector"
            android:text="@string/news"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bottom_line"
            />

        <RadioButton
            android:id="@+id/more_page"
            style="@style/main_bottom_radio_button_style"
            android:drawableTop="@drawable/mine_selector"
            android:text="@string/mine"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bottom_line"
            />

        <RadioButton
            android:id="@+id/tool_page"
            style="@style/main_bottom_radio_button_style"
            android:drawableTop="@drawable/tool_selector"
            android:text="@string/tool"
            />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bottom_line"
        />
</LinearLayout>